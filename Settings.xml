					<Anchors>
						<Anchor point="TOPLEFT" x="25" y="-72" />
					</Anchors>
				</FontString>
				<FontString name="totalRP3Header" inherits="GameFontNormalLarge" text="TotalRP3" justifyH="LEFT">
