					<Anchors>
						<Anchor point="TOPLEFT" x="17" y="-18" />
					</Anchors>
				</FontString>
				<FontString name="GeneralHeader" inherits="GameFontNormalLargeLeft" text="General">
					<Size x="80" y="20" />
